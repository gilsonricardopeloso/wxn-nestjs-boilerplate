{
    "name": "wxn-nestjs-boilerplate",
    "version": "0.0.1",
    "description": "Nest is an MIT-licensed open source project. Webxnet use Nest for some of our backend service.",
    "author": "Gilson Peloso",
    "private": true,
    "license": "MIT",
    "scripts": {
        "prebuild": "rimraf dist",
        "build": "nest build",
        "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
        "start": "nest start",
        "dev": "kill-port 3333 && nest start --watch",
        "clean": "rm -rf dist",
        "up": "npm -s run clean && npm run build && docker-compose up -d -V --build",
        "down": "docker-compose down",
        "debug": "nest start --debug --watch",
        "start:prod": "node dist/main",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./test/jest-e2e.json"
    },
    "dependencies": {
        "@aws-sdk/client-s3": "^3.312.0",
        "@nestjs/axios": "^3.0.0",
        "@nestjs/common": "10.2.7",
        "@nestjs/config": "^3.1.1",
        "@nestjs/core": "10.2.7",
        "@nestjs/jwt": "^10.1.1",
        "@nestjs/mapped-types": "*",
        "@nestjs/passport": "^10.0.2",
        "@nestjs/platform-express": "10.2.7",
        "@nestjs/swagger": "^7.1.8",
        "@prisma/client": "^5.5.2",
        "axios": "^1.4.0",
        "bcrypt": "^5.1.1",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.0",
        "hbs": "^4.2.0",
        "multer": "^1.4.5-lts.1",
        "multer-s3": "^3.0.1",
        "nestjs-i18n": "^10.3.1",
        "passport": "^0.6.0",
        "passport-jwt": "^4.0.1",
        "passport-local": "^1.0.0",
        "reflect-metadata": "^0.1.13",
        "rxjs": "^7.8.1",
        "sanitize-html": "^2.11.0",
        "uuid": "^9.0.0"
    },
    "devDependencies": {
        "@nestjs/cli": "10.2.1",
        "@nestjs/schematics": "10.0.3",
        "@nestjs/testing": "10.2.7",
        "@types/bcrypt": "^5.0.0",
        "@types/express": "4.17.17",
        "@types/express-session": "^1.17.7",
        "@types/jest": "29.5.0",
        "@types/multer": "^1.4.7",
        "@types/multer-s3": "^3.0.0",
        "@types/node": "18.15.11",
        "@types/passport-jwt": "^3.0.8",
        "@types/passport-local": "^1.0.35",
        "@types/sanitize-html": "^2.9.0",
        "@types/supertest": "2.0.12",
        "@types/uuid": "^9.0.1",
        "@typescript-eslint/eslint-plugin": "^6.0.0",
        "@typescript-eslint/parser": "^6.0.0",
        "eslint": "^8.42.0",
        "eslint-config-prettier": "^9.0.0",
        "eslint-plugin-prettier": "^5.0.1",
        "jest": "29.5.0",
        "kill-port": "^2.0.1",
        "prettier": "^3.0.3",
        "prisma": "^5.5.2",
        "source-map-support": "^0.5.21",
        "supertest": "6.3.3",
        "ts-jest": "29.1.0",
        "ts-loader": "^9.4.3",
        "ts-node": "10.9.1",
        "tsconfig-paths": "4.2.0",
        "typescript": "^5.1.3"
    },
    "prisma": {
        "schema": "prisma/schema.prisma",
        "seed": "ts-node prisma/seed.ts"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    }
}
